<%= render 'search' %>
<% if @user_or_book == "1"%>
  <h1>User search for "<%= @search %>"</h1>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Introduction</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <th>
          <%= link_to user_path(user) do %>
            <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg" %>
          <% end %>
        </th>
        <th><%= user.name %></th>
        <th><%= user.introduction %></th>
      </tr>
      <% end %>
    </tbody>
  </table>
<% elsif @user_or_book == "2" %>
  <h1>Book search for "<%= @search %>"</h1>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <th>
          <%= link_to user_path(book.user) do %>
            <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg" %>
          <% end %>
        </th>
        <th><%= book.title %></th>
        <th><%= book.body %></th>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
<% end %>