<% book_comments.each do |comment| %>
<tr>
  <td><%= link_to user_path(comment.user), remote: true do %>
        <%= attachment_image_tag comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg" %><br>
        <%= comment.user.name %>
      <% end %>
  </td>
  <td><%= comment.comment %></td>
  <td><% if comment.user == current_user %>
        <%= link_to 'Destroy', book_book_comment_path(comment.book.id, comment.id), method: :delete, class: "btn btn-sm btn-danger destroy_book_comment_#{comment.id}", remote: true %>
      <% end %>
  </td>
</tr>
<% end %>